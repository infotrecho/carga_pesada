<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Dashboard</h1>
  </div>

  <div class="card">
    <div class="card-header">
      <h4>Últimas Ocorrências</h4>
    </div>

    <div class="card-body">
      <div id="map" data-points-path="<%= admin_points_path %>" style="width:100%;height:400px;"></div>
    </div>

    <div class="card-footer">

      <%= render "stats", locals: { stats: @stats } %>

      <div class="table-responsive">
        <table class="table table-striped table-md">
          <tbody>
            <tr>
              <th>Ocorrência</th>
              <th>Data</th>
              <th>Tipo</th>
            </tr>
            <%= render partial: "occurrences", locals: { occurrences: @events } %>
          </tbody>
        </table>

        <%== render partial: 'shared/pagy_nav', locals: {pagy: @pagy} %>
      </div>
    </div>
  </div>
</section>

<% content_for(:page_title, 'Dashboard') %>
