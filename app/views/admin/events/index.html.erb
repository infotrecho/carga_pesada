<section class="section">
  <div class="section-header d-mobile-none">
    <h1>Eventos</h1>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered table-md">
          <tr>
            <th>#ID</th>
            <th>#Latitude</th>
            <th>#Longitude</th>
            <th>#Descrição</th>
            <th>Tipo</th>
            <th>Metadata</th>
            <th>Prioridade</th>
          </tr>

          <%= render @events %>
        </table>
      </div>
    </div>

    <%== render partial: 'shared/pagy_nav', locals: {pagy: @pagy} %>
  </div>

</section>

<% content_for(:page_title, "Novo Evento") %>
